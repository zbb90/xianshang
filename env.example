# ================================
# Railway + GitHub 部署环境变量配置
# ================================

# Flask 应用配置
SECRET_KEY=your_secret_key_here_change_in_production
FLASK_ENV=production
FLASK_DEBUG=False

# 数据库配置
# Railway 部署时建议使用 PostgreSQL
DATABASE_URL=sqlite:///enhanced_timesheet.db
# PostgreSQL 示例: postgresql://user:password@host:port/database

# 高德地图API配置
AMAP_API_KEY=your_amap_api_key
AMAP_SECRET_KEY=your_amap_secret_key

# 服务器配置 (Railway 会自动设置 PORT)
HOST=0.0.0.0
PORT=8080

# 安全配置
SESSION_COOKIE_SECURE=True
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=Lax
PERMANENT_SESSION_LIFETIME=86400

# 日志配置
LOG_LEVEL=INFO
ACCESS_LOG=-
ERROR_LOG=-

# Railway 特定配置
RAILWAY_ENVIRONMENT=production

# GitHub Actions 部署配置
# 以下变量需要在 GitHub Secrets 中配置：
# RAILWAY_TOKEN=your_railway_token
# RAILWAY_SERVICE_ID=your_service_id
# RAILWAY_APP_URL=https://your-app.railway.app
